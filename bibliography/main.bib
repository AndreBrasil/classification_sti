keywords = {}, 
local-url = {file://localhost/Users/andre/Documents/Papers%20Library/Daraio/Daraio_2016_Data%20integration%20for%20research%20and%20innovation%20policy-%20an%20Ontology-Based%20Data%20Management%20approach.pdf}
